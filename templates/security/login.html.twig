{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block content %}
	<div class="container py-2">
		<div class="row justify-content-center">
			<form method="post" class="form-signin col-md-4">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes identifié avec
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Se déconnecter</a>
					</div>
				{% endif %}
				<h2 class="mb-3 mt-4">Veuillez vous connecter</h2>
				<label class="mt-2" for="inputEmail">E-mail</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-1" autocomplete="email" required autofocus>
				<label for="inputPassword" class="mt-2">Mot de passe</label>
				<div class="input-group mt-1">
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete=" current-password" required>
					<span class="input-group-text" onclick="togglePassword()">
						<i class="fa fa-eye-slash" id="eye-js"></i>
						<i class="fa-regular fa-eye d-none" id="eye-slash-js"></i>
					</span>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button class="button button-red btn col-md-12 mt-3" type="submit">
					se connecter
				</button>
			</form>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/password.js') }}"></script>
{% endblock %}
