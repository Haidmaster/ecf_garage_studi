{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block content %}
	<div class="container w-50 py-3">
		<form method="post" class="form-signin">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes identifié avec
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}
			<h1 class="h3 mb-3 mt-4">Veuillez vous connecter</h1>
			<label class="mt-1" for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-1" autocomplete="email" required autofocus>
			<label for="inputPassword" class="mt-1">Mot de passe</label>
			<input type="password" name="password" id="inputPassword" class="form-control mt-1" autocomplete="current-password" required>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="button button-red btn mt-2" type="submit">
				Se connecter
			</button>
		</form>
	</div>
{% endblock %}
