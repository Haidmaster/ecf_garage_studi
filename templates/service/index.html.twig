<div class="col-lg-4 prestation">
	<img class="img-fluid prestation__image" src="{{ asset ('assets/uploads/service/' ~ service.image.name )}}" alt="La photo de la prestation"/>

	<h4 class="prestation__title">{{service.name}}</h4>
	<p class="prestation__description">{{service.content}}</p>
	<p>
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{path('admin_service_edit', {'id': service.id})}}" class="btn btn-info btn-sm">Modifier</a>
			<a href="{{path('admin_service_delete', {'id': service.id})}}" class=" btn btn-danger btn-sm">Supprimer</a>
		{% endif %}
	</p>
</div>
